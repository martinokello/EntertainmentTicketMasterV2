@model EntertainmentTicketMaster.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<style type="text/css">

     div.body-content div, div.body-content {
         color: gray;
     }

    #body.home div div, #body.home div div:first-child {
        float: left;
        width: 960px;
    }

    .form-control {
        width: 250px;
        float: left;
    }

    .control-label {
        width: 150px;
        text-align: right;
        float: left;
    }
	#body.home div div:first-child ul li{min-height:10px;width:100%;}
	#body.home div:first-child ul li{float:none;}
	div.validation-summary-errors ul li {color: #B94A48;}
</style>

<div class="body-content" id="body-content" style="text-align:left !important; width:100% !important;">
    <h2>@ViewBag.Title.</h2>
    <div class="row">
        <div class="col-lg-12">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <h4>Use a local account to log in.</h4>
                    <hr />
                    @Html.ValidationSummary()
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-lg-3 control-label" })<span style="float:left;">&nbsp;</span>
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-lg-9" })<div>&nbsp;</div>
                            @Html.ValidationMessageFor(m => m.UserName, "")
                        <div>&nbsp;</div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-lg-3 control-label" })<span style="float:left;">&nbsp;</span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-lg-9" })<div>&nbsp;</div>
                            @Html.ValidationMessageFor(m => m.Password,"")
                        <div>&nbsp;</div>
                    </div>
                    <div class="form-group">
						@Html.LabelFor(m => m.RememberMe, new {@class="col-lg-3  control-label"})<span style="float:left;">&nbsp;</span>
						@Html.CheckBoxFor(m => m.RememberMe, new { @style="-webkit-appearance:checkbox !important;", @class="col-lg-1 checkbox"})
                        <div>&nbsp;</div>
                    </div>
                    <div class="form-group">
                        <div>&nbsp;</div>
                        <input type="submit" value="Log in" class="btn btn-default" />
                    </div>
                    <p>
                        @Html.ActionLink("Register", "Register") if you don't have a local account.
                    </p>
                }
            </section>
        </div>
    </div>
</div>
