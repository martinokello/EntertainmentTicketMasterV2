@model EntertainmentTicketMaster.Models.PasswordChangeViewModel
@{
    ViewBag.Title = "ChangePassword";
}

<style type="text/css">
    div.body-content div, div.body-content {
        color: gray;
    }

    #body.home div div, #body.home div div:first-child {
        float: left;
        width: 960px;
    }

    .form-control {
        width: 250px;
        float: left;
    }

    .control-label {
        width: 150px;
        text-align: right;
        float: left;
    }

    #body.home div div:first-child ul li {
        min-height: 10px;
        width: 100%;
    }

    #body.home div:first-child ul li {
        float: none;
    }

    div.validation-summary-errors ul li {
        color: #B94A48;
    }
</style>


<div class="body-content" id="body-content" style="text-align:left !important; width:100% !important;">
    <h2>Change Password</h2>
    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })<span style="float: left;">&nbsp;</span>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control textbox" })
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PasswordComparison, new { @class = "col-md-2 control-label" })<span style="float: left;">&nbsp;</span>
            @Html.PasswordFor(m => m.PasswordComparison, new { @class = "form-control textbox" })
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            <div>&nbsp;</div>
            <div class="col-md-10">
                <input type="submit" class="btn btn-default" value="Change Password" />
            </div>
        </div>
    }
</div>