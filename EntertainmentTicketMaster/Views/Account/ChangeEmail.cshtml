@model EntertainmentTicketMaster.Models.EmailChangeViewModel

@{
    ViewBag.Title = "ChangeEmail";
}
<style type="text/css">
    div.body-content div, div.body-content {
        color: gray;
    }

    #body.home div div, #body.home div div:first-child {
        float: left;
        width: 960px;
    }

    .form-control {
        width: 250px;
        float: left;
    }

    .control-label {
        width: 150px;
        text-align: right;
        float: left;
    }

    #body.home div div:first-child ul li {
        min-height: 10px;
        width: 100%;
    }

    #body.home div:first-child ul li {
        float: none;
    }

    div.validation-summary-errors ul li {
        color: #B94A48;
    }
</style>

<div class="body-content" id="body-content" style="text-align:left !important; width:100% !important;">
    @using (Html.BeginForm("ChangeEmail", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Change Email.</h4>
        <hr />
        @Html.ValidationSummary()
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })<span style="float: left;">&nbsp;</span>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control textbox" })
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })<span style="float: left;">&nbsp;</span>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control textbox" })
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.EmailComparison, new { @class = "col-md-2 control-label" })<span style="float: left;">&nbsp;</span>
            @Html.TextBoxFor(m => m.EmailComparison, new { @class = "form-control textbox" })
            <div>&nbsp;</div>
        </div>
        <div class="form-group">
            <div>&nbsp;</div>
            <div class="col-md-12">
                <input type="submit" class="btn btn-default" value="Change email" />
            </div>
        </div>
    }
</div>